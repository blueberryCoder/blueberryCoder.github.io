.img-row,
.img-row > *
  display: inline-flex
  gap: 8px
  flex-direction: row
  align-items: flex-start
  flex-wrap: nowrap 
  width: auto

/* 真正的图片元素 */
.img-row img
  display: block
  height: auto

.post-banner {
  width: 100%;
  height: 300px; /* 必须要有高度！ */
  background-size: cover;
  background-position: center;
  border-radius: 8px;
  margin-bottom: 20px;
}